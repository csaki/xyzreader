<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_left"
    android:layout_marginRight="@dimen/card_margin_rigth"
    android:layout_marginTop="@dimen/card_margin_top"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:elevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@color/secondary_color"
            android:transitionName="@string/transition_photo"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.XYZReader.Article.Title"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/subtitle_card_padding_left"
            android:paddingRight="@dimen/subtitle_card_padding_rigth"
            android:paddingBottom="@dimen/subtitle_card_padding_bottom"
            android:textColor="@color/subtitle_card_text_color"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
